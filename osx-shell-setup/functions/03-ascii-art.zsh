# Function to display welcome message with chosen ASCII art
function display_welcome_with_art() {
    local art_version="${1:-v1}"  # Default to v1 if no version specified
    local update_info
    update_info=$(get_last_update)
    local version
    version=$(get_version)
    
    printf "╔═══════════════════════════════════════════════════════════════════════════════════════════════════════════════════════╗\n"
    printf "║                                                                                                                       ║\n"
    
    # Display chosen ASCII art
    case "$art_version" in
        "v1") ascii_v1 ;;
        "v2") ascii_v2 ;;
        "v3") ascii_v3 ;;
        "v4") ascii_v4 ;;
        *) ascii_v1 ;;  # Default to v1 if invalid version
    esac
    
    printf "║                                                                                                                       ║\n"
    printf "║                                      v%s • Last Updated: %s                                       ║\n" "$version" "$update_info"
    printf "╚═══════════════════════════════════════════════════════════════════════════════════════════════════════════════════════╝\n"
} 